{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/types": ["../src/types"],
      "@/utils": ["../src/utils"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../src/types/**/*",
    "../src/utils/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}